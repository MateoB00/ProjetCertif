{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}
{% block css %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}
{% block body %}
<section class="container text-center">
    <h1 class="my-5">Tes achats effectués</h1>

    <table class="table table-dark table-striped my-5">
        <thead>
            <tr>
                <th>Reference</th>
                <th>Commande créée le</th>
                <th>Etat</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
            {% if commande.user.id == app.user.id %}
            <tr>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.creerA ? commande.creerA|date('Y-m-d') : '' }}</td>
                <td>{{ commande.etat }}</td>
            </tr>
            {% endif %}
            {% else %}
            <tr>
                <td colspan="6">Aucune commande trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}