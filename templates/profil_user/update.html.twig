{% extends 'base.html.twig' %}
{% block css %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="{{ asset('css/connexion.css') }}" rel="stylesheet"/>
{% endblock %}

{% block title %}Modifie ton profil
{% endblock %}


{% block body %}
	{% if app.request.get('id') == app.user.id %}
		<div class="wrapper fadeInDown">
			<div id="formContent">
				<h2>Modifie ton profil</h2>
				{{form_start(form)}}
				{{form_row(form.nom)}}
				{{form_row(form.prenom)}}
				{{form_row(form.adresse)}}
				{{form_row(form.ville)}}
				{{form_row(form.numtel)}}
				<div class=" mt-3">
					{{form_row(form.submit)}}
				</div>
				<input type="hidden" name="_token" value="{{ csrf_token('updateProfil') }}">
				{{form_end(form)}}
			</div>
		</div>
	{% else %}
		<p>Qu'est ce que tu fais l√† ?</p>


	{% endif %}
{% endblock %}
