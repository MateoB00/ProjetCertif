{% extends 'base.html.twig' %}

{% block title %}A propos de nous !
{% endblock %}
{% block css %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="{{ asset('css/aboutus.css') }}" rel="stylesheet"/>
{% endblock %}
{% block body %}
	{% if tonCoach %}
		{% if tonCoach.coach == coach %}
			<section class="toncoach pt-4 text-center">

				<div class="container py-5">

					<div class="row justify-content-center gx-5">
						<div class="col-md-12 carre_1 p-4 w-75" style="border-radius: 50px">
							<h1 class="pb-2 border-bottom w-50 mx-auto">Ton coach</h1>
							<img class="img-fluid mt-2" src="{{ asset('images/pdp/' ~ coach.coachpdp) }}" width="400px" alt="Photo_de_profil_coach">
							<div class='d-flex justify-content-center gap-5 my-3'>
								<p class="fs-3">Nom :
									{{ coach.nom }}</p>
								<p class="fs-3">Prénom :
									{{ coach.prenom }}</p>
							</div>
							<h2 class="pb-2 border-bottom w-50 mx-auto">Coordonnées</h2>
							<div class="d-flex justify-content-around gap-5 my-3">
								<p class="fs-4">Numéro de téléphone :
									{{ coach.numtel }}</p>
								<p class="fs-4">Email professionnel :
									{{ coach.email }}</p>
							</div>
							<a href="{{ path("send_coach", {user: tonCoach.coach.id}) }}" class='inputBtn'>Envoyez un message à votre coach</a>
						</div>

					</div>
				</div>

			</section>
		{% endif %}
	{% endif %}
{% endblock %}
