{% extends 'base.html.twig' %}

{% block title %}Blog
{% endblock %}

{% block body %}
	<h1>Blog</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ blog.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ blog.titre }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ blog.contenu }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ blog.description }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ blog.date ? blog.date|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td>{{ blog.image }}</td>
			</tr>
		</tbody>
	</table>
	<div class="row gap-3 text-center">
		<a href="{{ path('app_blog_index') }}">Listes des blogs</a>

		<a href="{{ path('app_blog_edit', {'id': blog.id}) }}">Modifier ce blog</a>

		{{ include('admin/blog/_delete_form.html.twig') }}
	</div>

{% endblock %}
