{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}


{% block title %}Modifier un utilisateur
{% endblock %}


{% block body %}

	<section class="pt-4 text-center">
		<div class="container py-5">
			<div class="col-12 w-75 mx-auto">
				{{form_start(form)}}
				{{form_row(form.nom)}}
				{{form_row(form.prenom)}}
				{{form_row(form.email)}}
				{{form_row(form.adresse)}}
				{{form_row(form.ville)}}
				{{form_row(form.numtel)}}
				{{form_row(form.diplome)}}
				{{form_row(form.estcoach)}}
				{{form_row(form.roles)}}
				{{form_row(form.coachpdp)}}
				{{form_row(form.submit)}}
				{{form_end(form)}}
			</div>
		</div>
	</section>
{% endblock %}
