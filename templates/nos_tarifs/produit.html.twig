{% extends 'base.html.twig' %}

{% block title %}
	{{produit.nom}}
{% endblock %}
{% block css %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="{{ asset('css/produit.css') }}" rel="stylesheet"/>
{% endblock %}
{% block body %}

	<section class="profil pt-4 text-center">
		<section class="container py-5">
			<div class="border-bottom border-3 border1 pb-5">
				<div class="col-md-6 w-50 mx-auto">
					<h1 class="fs-2 border-bottom border-3 pb-3 mb-5">
						{{ produit.nom }}

					</h1>
				</div>
				<p class="lead w-75 mx-auto">{{ produit.description }}</p>

				<div class="row">
					<div class="col-6 col-md-6 carre_1 mx-auto ">
						<div class="d-flex justify-content-between pt-3 pe-2">
							<span class="fs-4">{{produit.prix}}
								€</span>
							<img src="{{ asset('images/produits/logo5_produit.png') }}" height="35px" class="" alt="Logo">
						</div>
						<img class='img-fluid my-3' src="{{ asset('images/produits/'~ produit.img) }}" alt="Image_Produit">
						<h2 class="mt-2">{{ produit.nom }}</h2>

						<p class="lead">{{produit.description}}</p>
						----
						<p class="lead">{{produit.contenu}}</p>

						<div
							class="my-4">

							{# <a href="{{ path('add', {id: produit.id})}}" class="btn btn-danger w-100" style="border:5px solid #dc3545;">
																																				<span class="my-auto">
																																					Acheter
																																				</span>
																																			</a> #}

							<form action="{{ path('add', {id: produit.id}) }}" method="post">
								<input type="hidden" name="quantite" id="quantite" min="1" step="1" placeholder="Quantité" style="max-width: 50px;" value="1">
								<button type="submit" class="btn btn-danger w-100">
									<span class="my-auto">
										Acheter
									</span>
								</button>
							</form>

						</div>
					</div>


				</div>
			</div>


		</section>
	</section>

{% endblock %}
