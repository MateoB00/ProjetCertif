{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}
{% block title %}Deviens coach
{% endblock %}
{% block css %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
	integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
	crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
	integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link href="{{ asset('css/devienscoach.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
<section class="contact text-center">
	<div class="container">
		<div class="col-12 w-50 mx-auto">
			<h1 class="border-bottom border-3 pb-3 my-5">
				Deviens Coach !
			</h1>
		</div>

		<div class="row">
			<div class="col-12 col-md-6 pe-5 mt-5 ">
				{{ form_start(form) }}
				{{ form_row(form.sujet) }}
				{{ form_row(form.nom) }}
				{{ form_row(form.prenom) }}
				{{ form_row(form.email) }}

				{{ form_row(form.telephone) }}


				{{ form_row(form.message) }}

				<p class="mx-auto">Ton CV ( PDF * )</p>
				{{ form_row(form.cv) }}
				<p class="mx-auto">Ta date de naissance</p>
				{{ form_row(form.age) }}
				{{ form_row(form.submit) }}
				{{ form_end(form) }}


				{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
				{% endfor %}
			</div>
			<div class="col-12 col-md-6 my-auto gap-3">
				<h2 class="">Nos coordonnées !
				</h2>
				<p class="py-3">
					Numéro de téléphone : 01.65.42.58.75

				</p>
				<p class="py-1">
					lerefuge@gmail.fr

				</p>
				<div class="pt-3 my-auto">
					<p style="margin:-5px">S.A.R.L Le Refuge Des Combattants</p>
					<p style="margin:-5px">66 avenue des Champs-Elysées</p>
					<p>75014 - PARIS</p>
				</div>
				</p>


			</div>
		</div>
</section>
{% endblock %}
{% block js %}{% endblock %}