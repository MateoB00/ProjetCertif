{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}
{% block css %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="{{ asset('css/connexion.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}


	<div class="wrapper fadeInDown my-3">
		<div id="formContent">

			<h1 class="fs-3 my-2">Créer un compte</h1>


			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.nom) }}
			{{ form_row(registrationForm.prenom) }}
			{{ form_row(registrationForm.plainPassword) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.numtel) }}
			{{ form_row(registrationForm.adresse) }}
			{{ form_row(registrationForm.ville) }}
			{{ form_row(registrationForm.anniversaire) }}
			<div class="my-3">
				{{ form_row(registrationForm.genre) }}
			</div>
			<div class="d-flex my-3 justify-content-center gap-5">

				<a href="{{ path('app_cgv') }}">Mentions Légales</a>


				{{ form_row(registrationForm.agreeTerms) }}

			</div>
			{{ form_row(registrationForm.submit) }}
			{{ form_end(registrationForm) }}


			<div id="formFooter">
				Tu as déjà un compte ?
				<a class="underlineHover" href="{{ path('app_login') }}">Connecte toi !</a>
			</div>

		</div>
	</div>

{% endblock %}
